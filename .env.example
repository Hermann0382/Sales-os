# ===========================================
# CallOS Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Database (PostgreSQL via Docker)
# ===========================================
# For local development with Docker:
DATABASE_URL="postgresql://callos:callos_dev_password@localhost:5432/callos_dev"

# ===========================================
# Clerk Authentication
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# Clerk URLs (optional - defaults work for most cases)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# External Integrations (Optional)
# ===========================================

# Zoom Integration
# ZOOM_CLIENT_ID=your_zoom_client_id
# ZOOM_CLIENT_SECRET=your_zoom_client_secret
# ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret

# GoHighLevel CRM Integration
# GHL_API_KEY=your_ghl_api_key
# GHL_LOCATION_ID=your_ghl_location_id

# ===========================================
# AI Services (Optional)
# ===========================================

# OpenAI for AI analysis features
# OPENAI_API_KEY=sk-your_openai_api_key

# ===========================================
# WebSocket / Real-time (Future)
# ===========================================
# SOCKET_IO_SECRET=your_socket_secret
